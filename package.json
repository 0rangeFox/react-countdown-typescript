{
  "name": "react-use-count-down",
  "version": "0.1.0",
  "description": "React countdown hook.",
  "keywords": [
    "countdown",
    "hook",
    "hooks",
    "timer",
    "react",
    "react-hooks"
  ],
  "repository": "https://github.com/alexkhismatulin/react-use-count-down.git",
  "license": "MIT",
  "author": "Alex Khismatulin <alexkhismatulin@gmail.com>",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist && babel src --out-dir dist --ignore **/*.test.js",
    "coveralls": "jest --coverage --silent --coverageReporters=text-lcov | coveralls",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build && git add dist"
    }
  },
  "jest": {
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "jest-setup.js"
    ],
    "coverageReporters": [
      "html",
      "lcov",
      "text"
    ],
    "setupFilesAfterEnv": [
      "./jest-setup.js"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge",
    "coveralls": "^3.0.3",
    "husky": "^2.3.0",
    "jest": "^24.7.1",
    "jest-dom": "^3.1.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-testing-library": "^6.1.2"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  }
}
